@model List<Network.DTO.PhoneNumber.PhoneNumberViewModel>

@{ 
    Layout = "~/areas/admin/Views/Shared/_Layout.cshtml";
}

<partial name="PartialCSS" />
<div class="table-responsive">
    <table class="table table-bordered table-hover table-condensed mb-4">
        <thead>
            <tr>
                <th>Id</th>
                <th>Номер телефона</th>
                <th>Тариф</th>
                <th>Оператор</th>
                <th class="text-center">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var phone in Model)
            {
                <tr>
                    <td>@phone.PhoneNumberId</td>
                    <td>@phone.PhoneNumber</td>
                    <td>@phone.TariffName</td>
                    <td>@phone.OperatorName</td>
                    <td class="text-center">
                        <ul class="table-controls" style="display:flex; margin:0 auto; width:fit-content; column-gap: 10px;">
                            <li><a href="/Admin/Tariff/EditTariff?id=@phone.PhoneNumberId" data-toggle="tooltip" data-placement="top" title="Edit"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-check-circle text-primary"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg></a></li>
                            <li><a href="/Admin/Tariff/DeleteTariff?id=@phone.PhoneNumberId" data-toggle="tooltip" data-placement="top" title="Delete"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x-circle text-danger"><circle cx="12" cy="12" r="10"></circle><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg></a></li>
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Id</th>
                <th>Номер телефона</th>
                <th>Тариф</th>
                <th>Оператор</th> 
                <th class="text-center">Действия</th>
            </tr>
        </tfoot>
    </table>
</div>
<partial name="PartialJS" />